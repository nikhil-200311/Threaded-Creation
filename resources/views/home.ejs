    <section class="menu container mx-auto py-8 ">
        <h1 class="text-xl font-bold mb-8 text-4xl text-center"> SHIRTS</h1>
        <div class="grid grid-cols-1 pl-5 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16 gap-y-16">
            <% pizzas.forEach(function(pizza, index){ %>
                <div class="w-full md:w-64 border-2 border-gray-300 rounded-lg shadow-md p-4"
                     style="transition-delay: 1s; opacity: 0; transform: translateY(30px);">
                    <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image%>" alt="">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg">
                            <%=pizza.name%>
                        </h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs">
                            <%=pizza.size%>
                        </span>
                        <div class="flex items-center justify-around mt-6">
                            <span class="font-bold text-lg">â‚¹<%=pizza.price%></span>
                            <button data-pizza="<%= JSON.stringify(pizza)%>"
                                    class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- JavaScript code for scrolling effect -->
    <script>
        window.addEventListener('scroll', function() {
            var items = document.querySelectorAll('.w-full');
            var scrollPosition = window.scrollY;

            items.forEach(function(item) {
                var itemPosition = item.getBoundingClientRect().top + window.scrollY;
                if (scrollPosition > itemPosition - window.innerHeight / 1.5) {
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                    item.style.transition = 'opacity 0.5s, transform 0.5s';
                }
            });
        });
    </script>
</body>
